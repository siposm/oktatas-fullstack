@using aspMvcCaseStudy.Models;
@model Developer;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
        body {
            margin: 40px;
        }
    </style>
    <title>Create Developer</title>
</head>
<body>
    <h1>CREATE</h1>
    <hr />
    <form action="create" method="post">
        <input value="@Model?.Name" name="name" type="text" placeholder="Name" class="form-control" />
        <br />
        <input value="@Model?.Salary" name="salary" type="text" placeholder="Salary" class="form-control" />
        <br />
        Active:
        @Html.CheckBoxFor(x => x.IsActive, new { @class = "form-check" })
        <br />
        @Html.DropDownListFor(x => x.Job, Html.GetEnumSelectList(typeof(Job)), new { @class = "form-select" })
        <br />
        <input type="submit" value="Create" class="btn btn-success btn-lg mt-5" />
    </form>
</body>
</html>